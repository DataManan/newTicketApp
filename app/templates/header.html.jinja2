<!DOCTYPE html>
<div class="header">
  <nav class="navbar" style="background-color: rgba(3, 15, 38, 1)">
    <!-- Navbar content -->
    <div class="container-fluid">
      <a class="navbar-brand" style="color: rgba(242, 242, 242, 1)">MyTicket</a>
    
    <form class="d-flex" role="search">
        <input
          class="form-control me-2"
          type="search"
          placeholder="Search"
          aria-label="Search"
        />
        <button class="btn btn-success" type="submit">Search</button>
        {% if current_user.is_authenticated %}
        <!-- When logged in will only show logout button -->
          <a href="logout" class="btn btn-primary" type="submit" style="background: rgba(242, 87, 87, .7)">
             LogOut </a>
        {% else %}
        <!-- After logging out it will only show login and signup button  -->
            <a href="login" class="btn btn-primary" type="submit"> LogIn </a>
            
            <a href="./signup" class="btn btn-success" style="background: rgba(242, 87, 87, 1)" type="submit">
              SignUp
            </a>
        {% endif %}
      </form>
    </div>
  </nav>
</div>
