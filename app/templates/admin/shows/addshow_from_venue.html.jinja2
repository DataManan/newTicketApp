{% extends "bootstrap/base.html" %} {% import "bootstrap/wtf.html" as wtf %}
{%block title %} Create Show{% endblock %} 
{% block styles %}
{{ super() }}
<link rel="stylesheet" href="../../static/styles/add_show.css" />
{% endblock styles %} 
{% block content %}
<div class="container m-5">
  <div class="row">
    <div class="col-3">
      <form class="form-signin" method="POST" enctype="multipart/form-data">
        <h2 class="form-signin-heading">Add Show</h2>
        {{ form.hidden_tag() }}

        {{ wtf.form_field(form.show_name) }}

        {{ wtf.form_field(form.venue_name) }}

        {{ wtf.form_field(form.ticket_price) }}

        {{ wtf.form_field(form.show_date) }}

        {{ wtf.form_field(form.show_start_time) }}

        {{ wtf.form_field(form.show_end_time) }}

        {{ wtf.form_field(form.capacity) }}


        <button class="btn btn-lg btn-primary btn-block" type="submit">
          Submit
        </button>
      </form>
    </div>
  </div>
</div>
{% endblock content %}
