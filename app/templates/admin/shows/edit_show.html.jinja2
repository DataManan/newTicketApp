{% extends "bootstrap/base.html" %} {% import "bootstrap/wtf.html" as wtf %}
{%block title %} Create Venue {% endblock %} 
{% block styles %}
{{ super() }}
<link rel="stylesheet" href="../../static/styles/add_show.css" />
{% endblock styles %} 
{% block content %}
<div class="container m-5">
  <div class="row">
    <div class="col-3">
      <form class="form-signin" method="POST" enctype="multipart/form-data" action="./edit_show">
        <h2 class="form-signin-heading">Add Show</h2>
        {{ form.hidden_tag() }}

        {{ wtf.form_field(form.show_name) }}

        <div class="venue__container">
          <p>
            {{ form.venues.label }}
          </p>
          <div class="select-multiple-sidebar">
            {{ (form.venues) }}
          </div>
          
        </div>

        {{ wtf.form_field(form.ticket_price) }}

        {{ wtf.form_field(form.premiere_date) }}

        {{ wtf.form_field(form.end_date) }}

        {{ wtf.form_field(form.rating) }}

        {{ wtf.form_field(form.tags) }}

        {{ wtf.form_field(form.show_description) }}

        {{ wtf.form_field(form.cast) }}

        {{ wtf.form_field(form.poster_file) }}

        <button class="btn btn-lg btn-primary btn-block" type="submit">
          Submit
        </button>
      </form>
    </div>
  </div>
</div>
{% endblock content %}
