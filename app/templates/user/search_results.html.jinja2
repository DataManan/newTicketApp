<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Search Results</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../static/styles/index.style.css" />
  </head>
  <body>
    <div>{% include "user/header.html.jinja2" %}</div>

    <div class="container p-5 m-5">
      <h1>Search Results for {{ q }}</h1>
      <!-- {{ shows }} -->
      {% if shows %}
      <h2>Shows:</h2>
      <div>
        {% for show in shows %}
        <div style="max-height: 100;">{% include "user/movies.html.jinja2" %}</div>
        {% endfor %}
      </div>
      {% endif %}
      <!-- {{ venues }} -->
      {% if venues %}
      <h2>Venues</h2>
      <ul>
        <div class="row">
        {% for venue in venues %}
        <!--  -->
        

        <div class="card col venue__card m-2 p-2" style="max-width: 18rem">
          <div class="card-body" style="text-align: center">
            <h5 class="card-title display-6">
              {{ venue.venue_name }}
            </h5>
            <p class="card-text">
              {{ venue.capacity }}
            </p>
            <p class="card-text">
              {{ venue.street }} ,

              {{ venue.city }} ,

              {{ venue.state }}
            </p>
            <p class="card-text">
              {{ venue.venue_tags }}
            </p>
          </div>
        </div>
        
        <!--  -->
        {% endfor %}
        </div>
      </ul>
      {% endif %}
      <a href="/" class="btn btn-success">Go Back</a>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
