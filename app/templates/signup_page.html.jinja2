<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../static/styles/base.style.css" />
    <link rel="stylesheet" href="../static/styles/usersign.style.css" />
  </head>
  <body>
    <!-- <h1>this is signup page</h1> -->
    <div class="container">
      <form class="form-signin col-3" method="POST" action="/signup">
        <h2 class="form-signin-heading">Please sign in</h2>
        <div class="row">
          <div class="col">
            <label for="inputFirstName" class="sr-only m-1">First Name</label>
            <label for="inputLasttName" class="sr-only mb-1">Last Name</label>
            <label for="inputUsername" class="sr-only mb-1">Username</label>
            <label for="email" class="sr-only mb-1">Email</label>
            <label for="inputPassword" class="sr-only mb-1">Password</label>
          </div>
          <div class="col p-1">
            {{ form.hidden_tag() }}

            {{ form.first_name }}

            {{ form.last_name }}

            {{ form.username }}

            {{ form.email }}

            {{ form.password }}
          </div>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit" href="/">
          Sign Up
        </button>
      </form>
    </div>
    <!-- /container -->

    <!-- Script -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
